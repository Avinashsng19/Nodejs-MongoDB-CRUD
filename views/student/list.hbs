{{!-- This will display the student record --}}
<h3><a class="btn btn-secondary" href="/student">Create New</a>&nbsp; Student List</h3>
<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>City</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/student/{{this.id}}" class="btn btn-primary btn-sm mb-2">Edit</a>
                <a href="/student/delete/{{this.id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
